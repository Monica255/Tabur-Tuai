<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaburTuai" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.TaburTuai.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaburTuai.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaburTuai.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/not_so_black</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="SmallText" parent="TextStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TitleText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleText" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubHeader" parent="TextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubSubHeader" parent="TextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header" parent="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeskripsiKebun" parent="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_end</item>
        <item name="background">@color/white</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="startIconTint">@color/green</item>
    </style>
</resources>