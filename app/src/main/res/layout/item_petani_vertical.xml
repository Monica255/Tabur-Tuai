<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/margin_item_with_ds"
        android:layout_marginBottom="@dimen/margin_item_with_ds"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_farm"
            android:layout_width="70dp"
            android:src="@drawable/img_placeholder_petani_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="70dp"/>
        <TextView
            android:maxLines="1"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/img_farm"
            app:layout_constraintStart_toEndOf="@id/img_farm"
            android:id="@+id/tv_petani_name"
            style="@style/SubSubHeader"
            tools:text="Petani name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_petani_id"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/tv_petani_name"
            app:layout_constraintTop_toBottomOf="@id/tv_petani_name"
            app:layout_constraintBottom_toBottomOf="@id/img_farm"
            style="@style/TitleText"
            tools:text="petani_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>