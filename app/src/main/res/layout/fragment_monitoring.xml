                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/hyphen"
                        android:textColor="@color/green" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_arah_angin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_item_with_ds"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_kelembaban_udara">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_start_end"
                    android:src="@drawable/icon_arah_angin"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/arah_angin" />

                <TextView
                    android:layout_width="0dp"
