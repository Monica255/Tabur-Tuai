<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/margin_item_with_ds"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img_terpopuler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="200dp"
        app:cardCornerRadius="5dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/img_terpopuler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_terpopuler"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cv_img_terpopuler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Kementerian Pertanian Dorong
Petani Muda dengan Sentuhan
Smart Farming"
        style="@style/SubTitleText"
        android:textAlignment="textStart"
        android:maxLines="3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>